{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://json-schema.org/draft-07/schema#",
  "title": "ability_schema",
  "description": "Schema for representing ability source information",
  "type": "object",
  "oneOf": [
    { "type": "object", "ref": "#/definitions/background" },
    { "type": "object", "ref": "#/definitions/class" },
    { "type": "object", "ref": "#/definitions/feat" },
    { "type": "object", "ref": "#/definitions/item" },
    { "type": "object", "ref": "#/definitions/race" }
  ],
  "definitions": {
    "background": {
      "type": "object",
      "required": [
        "category",
        "name"
      ],
      "properties": {
        "category": {
          "type": "string",
          "ref": "#/definitions/category"
        },
        "name": {
          "type": "string"
        },
        "subtype": {
          "type": "string"
        }
      }
    },
    "class": {
      "type": "object",
      "required": [
        "category",
        "name"
      ],
      "properties": {
        "category": {
          "type": "string",
          "ref": "#/definitions/category"
        },
        "name": {
          "type": "string",
          "ref": "class_schema.json#"
        },
        "subtype": {
          "type": "string"
        }
      }
    },
    "feat": {
      "type": "object",
      "required": [
        "category",
        "name"
      ],
      "properties": {
        "category": {
          "type": "string",
          "ref": "#/definitions/category"
        },
        "name": {
          "type": "string"
        }
      }
    },
    "item": {
      "type": "object",
      "required": [
        "category",
        "name"
      ],
      "properties": {
        "category": {
          "type": "string",
          "ref": "#/definitions/category"
        },
        "name": {
          "type": "string"
        }
      }
    },
    "race": {
      "type": "object",
      "required": [
        "category",
        "name"
      ],
      "properties": {
        "category": {
          "type": "string",
          "ref": "#/definitions/category"
        },
        "name": {
          "type": "string"
        },
        "subtype": {
          "type": "string"
        }
      }
    },
    "category": {
      "type": "string",
      "enum": [
        "Background",
        "Class",
        "Feat",
        "Item",
        "Race"
      ]
    }
  }
}