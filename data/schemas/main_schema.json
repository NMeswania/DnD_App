{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "main_schema",
  "description": "Schema for representing characters",
  "type": "object",
  "required": [
    "main_info"
  ],
  "properties": {
    "main_info": { "type": "string", "minLength": 1 },
    "abilities_list": { "type": "string", "minLength": 1 },
    "ability_scores": { "type": "string", "minLength": 1 },
    "combat": { "type": "string", "minLength": 1 },
    "equipment_list": { "type": "string", "minLength": 1 },
    "proficiencies": { "type": "string", "minLength": 1 },
    "spell_list": { "type": "string", "minLength": 1 },
    "weapon_list": { "type": "string", "minLength": 1 }
  }
}