{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://json-schema.org/draft-07/schema#",
  "title": "spell_schema",
  "description": "Schema for representing spell information",
  "type": "object",
  "required": [
    "name",
    "level",
    "school",
    "basic_data",
    "spell_description"
  ],
  "properties": {
    "name": {
      "description": "Readable name of the spell",
      "type": "string"
    },
    "level": {
      "description": "Spell level",
      "type": "string",
      "enum": [
        "Cantrip",
        "Level 1",
        "Level 2",
        "Level 3",
        "Level 4",
        "Level 5",
        "Level 6",
        "Level 7",
        "Level 8",
        "Level 9"
      ]
    },
    "school": {
      "description": "Spell school",
      "type": "string",
      "enum": [
        "Conjuration",
        "Necromancy",
        "Evocation",
        "Abjuration", 
        "Transmutation",
        "Divination",
        "Enchantment",
        "Illusion",
        "Conjuration (ritual)",
        "Necromancy (ritual)",
        "Evocation (ritual)",
        "Abjuration (ritual)", 
        "Transmutation (ritual)",
        "Divination (ritual)",
        "Enchantment (ritual)",
        "Illusion (ritual)"
      ]
    },
    "basic_data": {
      "description": "Basic spell information in key-value pairs",
      "type": "object",
      "ref": "#/definitions/basic_data"
    },
    "spell_description": {
      "description": "Main spell description",
      "type": "string"
    },
    "higher_level_description": {
      "description": "Spell description for higher-levels",
      "type": "string"
    }
  },
  "definitions": {
    "basic_data": {
      "type": "object",
      "required": [
        "range",
        "casting_time",
        "components",
        "duration"
      ],
      "properties": {
        "range": {
          "type": "string"
        },
        "casting_time": {
          "type": "string"
        },
        "components": {
          "type": "string"
        },
        "duration": {
          "type": "string"
        }
      }
    }
  }
}