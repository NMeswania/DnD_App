{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://json-schema.org/draft-07/schema#",
    "title": "dice_schema",
    "description": "Schema for dice",
    "type": "object",
    "required": [
        "die"
    ],
    "properties": {
        "die": {
            "description": "Enum of dices",
            "type": "string",
            "enum": [
                "d4",
                "d6",
                "d8",
                "d10",
                "d12",
                "d20",
                "d100"
            ]
        }
    }
}