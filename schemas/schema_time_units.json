{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://json-schema.org/draft-07/schema#",
    "title": "time_units_schema",
    "description": "Schema for representing units of time",
    "type": "object",
    "required": [
        "unit"
    ],
    "properties": {
        "unit": {
            "description": "Time unit",
            "type": "string",
            "enum": [
                "Action",
                "Bonus action",
                "Minute",
                "Hour",
                "Day"
            ]
        }
    }
}