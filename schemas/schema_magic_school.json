{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://json-schema.org/draft-07/schema#",
    "title": "magic_school_schema",
    "description": "Schema for representing magic schools",
    "type": "object",
    "required": [
        "school"
    ],
    "properties": {
        "school": {
            "description": "Enum of magic schools",
            "type": "string",
            "enum": [
                "Conjuration",
                "Necromancy",
                "Evocation",
                "Abjuration",
                "Transmutation",
                "Divination",
                "Enchantment",
                "Illusion"
            ]
        }
    }
}