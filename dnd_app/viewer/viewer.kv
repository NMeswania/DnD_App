#:kivy 2.0

<Viewer>:
  scroll_content: scroll_content
  main_info: main_info
  ability_scores: ability_scores

  BoxLayout:
    orientation: "vertical"

    ScrollView:
      do_scroll_x: False
      do_scroll_y: True

      GridLayout:
        id: scroll_content
        cols: 1
        size_hint_y: None
        row_default_height: 200

        BoxLayout:
          id: main_info
          orientation: "vertical"
          height: 100

        BoxLayout:
          id: ability_scores
          orientation: "vertical"
          height: 300
