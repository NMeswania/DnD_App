{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "#spell",
    "title": "spell_schema",
    "description": "Schema for representing spells",
    "type": "object",
    "required": [
        "uuid",
        "meta",
        "",
        "desc"
    ],
    "properties": {
        "uuid": {
            "description": "UUID of spell",
            "type": "string"
        },
        "meta": {
            "description": "Top-level info for the spell",
            "type": "object",
            "ref": "#/definitions/meta"
        },
        "attr": {
            "description": "Attributes for the spell",
            "type": "object",
            "ref": "#/definitions/attr"
        },
        "desc": {
            "description": "Descriptions for the spell",
            "type": "object",
            "ref": "#/definitions/desc"
        }
    },
    "definitions": {
        "meta": {
            "type": "object",
            "required": [
                "name", "level", "school", "classes"
            ],
            "properties": {
                "name": {
                    "type": "string",
                    "description": "Spell name"
                },
                "level": {
                    "type": "integer",
                    "description": "Spell level",
                    "minimum": 0,
                    "maximum": 9
                },
                "school": {
                    "ref": "schema_magic_school.json#/school"
                },
                "classes": {
                    "ref": "schema_classes.json#/name"
                }
            }
        },
        "attr": {
            "type": "object",
            "required": [
                "casting_time",
                "range",
                "components",
                "duration",
                "target"
            ],
            "properties": {
                "casting_time": {
                    "type": "object",
                    "properties": {
                        "value": {
                            "type": "integer",
                            "minimum": 0
                        },
                        "unit": {
                            "$ref": "schema_time_units.json#/unit"
                        }
                    }
                },
                "range": {
                    "type": "object",
                    "required": ["unit"],
                    "properties": {
                        "value": {
                            "type": "integer",
                            "minimum": 5
                        },
                        "unit": {
                            "type": "string",
                            "enum": [
                                "feet", "miles", "Self", "Touch"
                            ]
                        },
                        "aoe": {
                            "type": "string",
                            "enum": [
                                "sphere", "cube", "cone", "line"
                            ]
                        },
                        "multiplier": {
                            "type": "integer",
                            "minimum": 0
                        }
                    }
                }
            }
        }
    }
}