#:kivy 2.0

<TraitsRenderer>:
  appearance_age: appearance_age
  appearance_height: appearance_height
  appearance_weight: appearance_weight
  appearance_eyes: appearance_eyes
  appearance_skin: appearance_skin
  appearance_hair: appearance_hair
  traits_personality_traits: traits_personality_traits
  traits_ideals: traits_ideals
  traits_bonds: traits_bonds
  traits_flaws: traits_flaws

  BoxLayout:
    orientation: "vertical"

    # Appearance
    GridLayout:
      rows: 2
      cols: 3
      size_hint: 1, 0.4

      TraitsRendererAppearanceBox:
        TraitsRendererAppearanceKey:
          text: "Age"
        TraitsRendererAppearanceValue:
          id: appearance_age

      TraitsRendererAppearanceBox:
        TraitsRendererAppearanceKey:
          text: "Height"
        TraitsRendererAppearanceValue:
          id: appearance_height

      TraitsRendererAppearanceBox:
        TraitsRendererAppearanceKey:
          text: "Weight"
        TraitsRendererAppearanceValue:
          id: appearance_weight

      TraitsRendererAppearanceBox:
        TraitsRendererAppearanceKey:
          text: "Eyes"
        TraitsRendererAppearanceValue:
          id: appearance_eyes

      TraitsRendererAppearanceBox:
        TraitsRendererAppearanceKey:
          text: "Skin"
        TraitsRendererAppearanceValue:
          id: appearance_skin

      TraitsRendererAppearanceBox:
        TraitsRendererAppearanceKey:
          text: "Hair"
        TraitsRendererAppearanceValue:
          id: appearance_hair

    # Traits
    GridLayout:
      rows: 1
      cols: 4
      size_hint: 1, 0.6

      TraitsRendererAppearanceBox:
        TraitsRendererTraitKey:
          text: "Personality traits"
        TraitsRendererTraitValue:
          id: traits_personality_traits

      TraitsRendererAppearanceBox:
        TraitsRendererTraitKey:
          text: "Ideals"
        TraitsRendererTraitValue:
          id: traits_ideals

      TraitsRendererAppearanceBox:
        TraitsRendererTraitKey:
          text: "Bonds"
        TraitsRendererTraitValue:
          id: traits_bonds

      TraitsRendererAppearanceBox:
        TraitsRendererTraitKey:
          text: "Flaws"
        TraitsRendererTraitValue:
          id: traits_flaws

<TraitsRendererAppearanceBox@BoxLayout>:
  orientation: "horizontal"

<TraitsRendererAppearanceKey@Label>:
  font_size: "13sp"
  italic: True
  size_hint: 0.4, 1

<TraitsRendererAppearanceValue@Label>:
  font_size: "13sp"
  size_hint: 0.6, 1

<TraitsRendererTraitKey@Label>:
  font_size: "13sp"
  italic: True
  size_hint: 0.2, 1

<TraitsRendererTraitValue@Label>:
  font_size: "13sp"
  size_hint: 0.8, 1
  halign: "left"
  valign: "middle"
  text_size: self.size
