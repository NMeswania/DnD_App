#:kivy 2.0

<WeaponListRenderer>:
  weapon_table: weapon_table

  orientation: "vertical"

  Label:
    text: "Weapons"
    font_size: "20sp"
    size_hint: 1, 0.1

  WeaponListRendererTable:

    BoxLayout:
      orientation: "horizontal"

      WeaponListRendererTableHeading:
        text: "Weapon name"
      WeaponListRendererTableHeading:
        text: "ATK"
      WeaponListRendererTableHeading:
        text: "DMG"

    WeaponListRendererTable:
      id: weapon_table

<WeaponListRendererWeaponRow@BoxLayout>:
  name: name
  attack: attack
  damage: damage

  orientation: "horizontal"

  WeaponListRendererWeaponButton:
    id: name
    text: ""

  WeaponListRendererTableHeading:
    id: attack
    padding_x: 20

  WeaponListRendererTableHeading:
    id: damage
    padding_x: 20

<WeaponListRendererTable@GridLayout>:
  cols: 1
  row_default_height: 40
  row_force_default: True
  pading: 5

<WeaponListRendererTableHeading@Label>:
  size_hint: 0.3, 1
  padding: 5, 5
  halign: "left"
  valign: "middle"
  text_size: self.size

<WeaponListRendererWeaponButton@Button>:
  text: ""
  font_size: "13sp"
  size_hint: 0.3, 1
  padding: 5, 5
  halign: "left"
  valign: "middle"
  text_size: self.size
